{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}} - Dashboard
{% endblock %}

{% block body %}
    {{parent()}}
    <div class="container">
        <div class="row">
            <div class="col-md-8 cursor">
                {% for post in pagination %}
                <div class="bg-white rounded p-3 my-3"  onclick="window.location.href='{{ path('view_post', {id:post.id}) }}'">
                    <div class="d-flex bd-highlight">
                        <div class="p-2 flex-grow-1 bd-highlight">
                            <h3>{{ post.title }}</h3>
                            <div class="my-3 bg-yellow"> <i class="fa fa-user"></i><strong> Created by {{ post.name }}</strong></div>
                            <div class=" bg-green"><i class="far fa-clock"></i> <strong>Publication Date: {{ post.publication_date | date }}</strong></div>
                        </div>
                        <div class="p-2 bd-highlight">
                            <div class="align-self-center">
                                <img class="rounded" src="{{ asset('uploads/photo/'~post.photo) }}" width="150px">
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="col-md-4">
                <div class="bg-white rounded p-3 my-3">
                    <h4>Comments</h4>
                    {% for comment in comments %}
                        <div class="bg-white my-2">
                            <a href="{{ path('view_post',{id:comment .id}) }}">{{ comment.title }}</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
