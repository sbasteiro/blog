{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}} - Posts
{% endblock %}

{% block body %}
    {{parent()}}
    {% set likesPost = post.likes | split(',') %}
    <div class="container bg-white rounded my-3 p-4">
        <div class="d-flex bd-highlight">
            <div class="p-2 flex-grow-1 bd-highlight">
                <h3>{{ post.title }}</h3>
                <div class="my-3" style="color:#3282b8;" onclick="addLike({{ post.id }})">
                    <i class="fa fa-thumbs-up"></i><strong>
                        {% if app.user.id in  likesPost %}
                        <strong>You Like This Post!</strong>
                        {% else %}
                            <img class="rounded" src="{{ asset('img/like.jpg') }}" width="150px">
                        {% endif %}
                    </strong>
                </div><strong>
                <div style="color:#c3f584;">
                    <i class="far fa-clock"></i> <strong>Publication Date: {{ post.publicationdate | date }}</strong>
                </div>
            </div>
            <div class="p-2 bd-highlight">
                <div class="align-self-center">
                    <img class="rounded" src="{{ asset('uploads/photo/'~post.photo) }}" width="150px">
                </div>
            </div>
        </div>
        <hr>
        <div class="text-justify my-3">
           {{ post.content }}
        </div>
    </div>
    <div class="container p-3">
        {{ form(form) }}
        <h3>Comments</h3>
        {% for comment in comments %}
            <div class="rounded bg-white my-2 p-3 border">
                <h5>{{ comment.name }} Said:</h5>
                <div class="w-100">{{ comment.comment }}</div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('js/ajax-call.js') }}"></script>
{% endblock %}
